<div data-hook="admin_post_form_fields" class="align-center row">
  <div class="alpha eight columns">
    <%= f.field_container :title do %>
      <%= f.label :title, Spree.t(:title) %> <span class="required">*</span><br />
      <%= f.text_field :title, :class => "fullwidth" %>
      <%= f.error_message_on :title %>
    <% end %>

    <%= f.field_container :permalink do %>
      <%= f.label :permalink, Spree.t(:permalink) %><br />
      <%= f.text_field :permalink, :class => "fullwidth" %>
      <%= f.error_message_on :permalink %>
    <% end %>

    <%= f.field_container :seo_title do %>
      <%= f.label :seo_title, Spree.t(:seo_title) %><br />
      <%= f.text_field :seo_title, :class => "fullwidth" %>
      <%= f.error_message_on :seo_title %>
    <% end %>
    <div class="row">
      <div class="alpha columns six">
        <%= f.field_container :authors do %>
          <%= f.label :author_id, Spree.t(:authors) %>
          <%= f.collection_select(:author_id, @authors, :id, :full_name, { :include_blank => Spree.t('get_choices.none') }, { :class => 'select2' }) %>
          <%= f.error_message_on :author %>
        <% end %>
        <%= f.field_container :categories do %>
          <%= f.label :category_id, Spree.t(:categories) %>
          <%= f.collection_select(:category_id, @categories, :id, :name, { :include_blank => Spree.t('get_choices.none') }, { :class => 'select2' }) %>
          <%= f.error_message_on :category %>
        <% end %>
      </div>
      <div class="omega columns two">
        <%= f.field_container :sticky do %>
           <%= f.check_box(:sticky) %>
           <%= f.label :sticky, Spree.t(:sticky)%><br />
        <% end %>
        <%= f.field_container :visible do %>
          <%= f.check_box(:visible) %>
          <%= f.label :visible, Spree.t(:visible)%><br />
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="alpha four columns">
        <%= f.field_container :featured_image do %>
          <%= f.label :featured_image, Spree.t(:featured_image) %>
          <%= f.file_field :featured_image %>
        <% end %>
      </div>
      <div class="omega four columns">
        <% if @post.featured_image.exists? %>
          <%= image_tag @post.featured_image.url(:thumb) %>
        <% end %>
      </div>
    </div>
    <%= f.field_container :published_at do %>
      <%= f.label :published_at, Spree.t(:published_at) %>
      <%= f.error_message_on :published_at %>
      <%= f.text_field :published_at, :value => datepicker_field_value(@post.published_at), :class => 'datepicker' %>
    <% end %>

    <%= f.field_container :tags do %>
      <%= f.label :tag_names, Spree.t(:tags) %><br />
      <%= f.hidden_field :tag_names, :value => @post.tag_names %>
    <% end %>

    <%= f.field_container :related_posts do %>
      <%= f.label :related_post_ids, Spree.t(:related_posts) %>
      <%= f.hidden_field :related_post_ids, :value => @post.related_post_ids.join(",") %>
    <% end %>

  </div>
  <div class="omega eight columns">
    <%= f.field_container :seo_description do %>
      <%= f.label :seo_scription, Spree.t(:seo_description) %><br />
      <%= f.text_area :seo_description, :rows => 5, :class => 'fullwidth' %>
    <% end %>
    <%= f.field_container :abstract do %>
      <%= f.label :abstract, Spree.t(:abstract) %><br />
      <%= f.text_area :abstract, :rows => 20, :class => 'fullwidth' %>
    <% end %>

    <%= f.field_container :body do %>
      <%= f.label :body, Spree.t(:body) %> <span class="required">*</span><br />
      <%= f.text_area :body, :rows => 20, :class => 'fullwidth' %>
    <% end %>

  </div>

</div>
