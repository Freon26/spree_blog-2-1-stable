<div data-hook="admin_category_form_fields" class="align-center row">
  <div class="alpha eight columns">
    <%= f.field_container :name do %>
      <%= f.label :name, Spree.t(:name) %> <span class="required">*</span><br />
      <%= f.text_field :name, :class => "fullwidth" %>
      <%= f.error_message_on :name %>
    <% end %>

    <%= f.field_container :permalink do %>
      <%= f.label :permalink, Spree.t(:permalink) %><br />
      <%= f.text_field :permalink, :class => "fullwidth" %>
      <%= f.error_message_on :permalink %>
    <% end %>

  </div>

  <div class="omega eight columns">
    <%= f.field_container :description do %>
      <%= f.label :description, Spree.t(:description) %> <span class="required">*</span><br />
      <%= f.text_area :description, :rows => 5, :class => 'fullwidth' %>
    <% end %>
  </div>

</div>
