<%= render :partial => 'spree/admin/shared/post_sub_menu' %>

<% content_for :page_title do %>
  <%= Spree.t(:editing_post) %> <span class="green">"<%= @post.title %>"</span>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to Spree.t(:back_to_post_list), spree.admin_posts_path, :icon => 'icon-arrow-left' %>
  </li>
<% end %>

<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @post } %>

<%= form_for [:admin, @post], html: { multipart: true } do |f| %>
  <fieldset>
    <legend align="center"><%= Spree.t(:new_post) %></legend>
    <%= render :partial => 'form', :locals => { :f => f } %>
    <%= render :partial => 'spree/admin/shared/edit_resource_links' %>
  </fieldset>
<% end %>
